<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:hapticFeedbackEnabled="true"

    android:background="@drawable/background">


    <FrameLayout
        android:id="@+id/top_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#cc2a2929">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/hokm_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_frame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="#cc2a2929">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/our_score_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_frame"
        android:layout_marginTop="30dp"
        android:background="#cc2a2929">

        <TextView
            android:id="@+id/human_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffff" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/opponent_score_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_frame"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:background="#cc2a2929">

        <TextView
            android:id="@+id/opponent_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffff" />
    </FrameLayout>



    <Button
        android:id="@+id/btn_new_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/newgame"
        style="@style/Cursive"
        android:textStyle="bold"
        app:backgroundTint="@color/lightGreen"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img_hokmm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="158dp"
        android:layout_marginTop="292dp"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="321dp"
        app:srcCompat="@drawable/spades1" />

    <ImageView
        android:id="@+id/img_hokmt"
        android:layout_width="73dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="236dp"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="102dp"
        android:layout_marginBottom="481dp"
        app:srcCompat="@drawable/spades1" />

    <ImageView
        android:id="@+id/img_hokmb"
        android:layout_width="84dp"
        android:layout_height="77dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="91dp"
        android:layout_marginTop="438dp"
        android:layout_marginEnd="236dp"
        android:layout_marginBottom="216dp"
        app:srcCompat="@drawable/spades1" />



</RelativeLayout>